{
  "name": "my-new-playground",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "configs/*",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "concurrently \"pnpm run clean:root\" \"pnpm run clean:workspaces\"",
    "clean:root": "rm -rf ./node_modules",
    "clean:workspaces": "turbo run clean",
    "build:eslint": "turbo run build --filter=@hj/eslint-config",
    "storybook:lib": "turbo run storybook --filter=@hj/react-lib",
    "storybook:playground": "turbo run storybook --filter=playground-nextjs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@effect/data": "^0.12.9",
    "@effect/io": "^0.26.1",
    "@effect/match": "^0.24.5",
    "@effect/query": "^0.7.0",
    "@effect/schema": "^0.20.3",
    "@effect/stm": "^0.12.0",
    "@effect/stream": "^0.22.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@hj/eslint-config": "workspace:*",
    "@manypkg/cli": "^0.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "tsup": "^7.0.0",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}