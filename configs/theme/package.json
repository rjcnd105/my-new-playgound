{
  "name": "@hj/theme",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": {
      "import": "./dist/*",
      "require": "./dist/*"
    }
  },
  "files": [
    "dist",
    "**/*.css"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rimraf dist node_modules",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build tsconfig.build.json --watch"
  },
  "devDependencies": {
    "eslint-config-hj-common": "workspace:*",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "tailwindcss": "^3.2.0"
  }
}
