{
  "name": "@hj/eslint-config",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    "./*": "./dist/*"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc --build --force tsconfig.build.json",
    "build-p": "concurrently \"pnpm run build:esm\" \"pnpm run build:cjs\"",
    "build:esm": "tsc --build --force tsconfig.esm.build.json",
    "build:cjs": "tsc --build --force tsconfig.cjs.build.json",
    "build-bundle": "tsup"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.5",
    "@next/eslint-plugin-next": "^13.4.5",
    "@types/node": "^20.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "eslint-config-next": "^13.4.5",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.10.3",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-file-extension-in-import-ts": "^1.0.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-unicorn": "^47.0.0",
    "globals": "^13.20.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}